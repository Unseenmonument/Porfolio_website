<div>
	<canvas class="canvas" src="/canvas.js" ></canvas>
	<div class="intro_name_bg">
		<h1 class="intro_name">Kerron S. Streater</h1>
	</div>
</div>
<nav class="navbar-expand-sm about_bar sticky-top">
	<ul class="navbar-nav">
		<li class="nav-item about">BIO</li>
		<li class="nav-item about">CONNECT</li>
		<li class="nav-item about">PROJECTS</li> 
		<li class="nav-item about">CONTACT</li>
	</ul>
</nav>

<!-- <div class="meat"> -->

	<div id="a1">
		<div>
			<h1 id="intro"></h1>
		</div>
		<div class="col-sm-12 about_pics row">
			<div class="col-sm-3 about1 slide">
				<%= image_tag("burning_rubber.png", :class => "circle") %>
			</div>
			<div class="col-sm-3 about2 slide">
				<%= image_tag("burning_rubber.png", :class => "circle") %>
			</div>
			<div class="col-sm-3 about3 slide">
				<%= image_tag("burning_rubber.png", :class => "circle") %>
			</div>
			<div class="col-sm-3 about4 slide">
				<%= image_tag("burning_rubber.png", :class => "circle") %>
			</div>
		</div>
	</div>
	<div id="a2">
		<h1>My Skills</h1>
		
		<div class="a1content col-sm-9 flex"> 
			<div class="row">
				<div class="col-sm-3">
					<h1>Placeholder!</h1>
				</div>
				<div class="col-sm-6 skill">
					<% @skills.each do |skill| %>
						<div class="row skill">
							<div class="full-skill-bar"> 
								<span class="skill-level slide-bar" style="min-width: calc(<%= skill.proficientcy %>px * 3 + 150px);"></span>
								<span class="skill-name">
									<%= skill.name %>
								</span>
								<span class="skill-percent">
									<%= skill.proficientcy %>% 
								</span>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
		
	</div>

	<div id="a3">
		

	</div>
	<div id="a4">
		<div class="arrowdown"></div>
		<h1>Let's Keep In Touch</h1>

			<!-- <%= render partial: 'homepages/contactform', :contact => @contact %> -->
		<div class="myform col-sm-5">
			<%= form_for @contact do |f| %>
				<p>First Name: <%= f.text_field :f_name %></p>
				<p>Last Name: <%= f.text_field :l_name %></p>
				<p>Email: <%= f.text_field :email %></p>
				<p>Company: <%= f.text_field :company %></p>
				<p>Reason: <%= f.text_area :reason %></p>
				<p>Phone: <%= f.text_field :phone %></p>
				  
				<%= f.submit 'Submit' %>
			<% end %>
		</div>

	</div>
	
	

