</div>
<nav class="navbar-expand-sm about_bar sticky-top">
	<ul class="navbar-nav">
		<li class="nav-item about scroll_about ">ABOUT</li>
		<li class="nav-item about scroll_skills">SKILLS</li>
		<li class="nav-item about scroll_projects">PROJECTS</li> 
		<li class="nav-item about scroll_contact">CONTACT</li>
	</ul>
</nav>

<!-- <div class="meat"> -->

	<div id="a1">
		<div class="section_title">ABOUT</div>
		<div class="underline"></div>
		<div class="intro_holder" >
			<h1 id="intro"></h1>
		</div>
		<div class="about_whole flex">
			<div class="col-sm-2 about_group flex">
				<div class="trapezoid slide_left">
					<div><%= image_tag("creativity.png", :class => "about-icon") %></div>
				</div>
				<div class="about_title"> Creative </div>
				<div class="about_text"> Commited to finding unique yet simple solutions to everyday problems </div>
			</div>
			<div class="col-sm-2 about_group flex">
				<div class="trapezoid slide_left">
					<div><%= image_tag("bow-tie.png", :class => "about-icon") %></div>
				</div>
				<div class="about_title"> Refined </div>
				<div class="about_text"> Elegant and easy to navigate UX/UI that work on any device </div>
			</div>
			<div class="col-sm-2 about_group flex">
				<div class="trapezoid slide_right">
					<div><%= image_tag("swift.png", :class => "about-icon") %></div>
				</div>
				<div class="about_title"> Speedy </div>
				<div class="about_text"> Responsive desings with minimal load times </div>
			</div>
			<div class="col-sm-2 about_group flex">
				<div class="trapezoid slide_right">
					<div><%= image_tag("kenetic.png", :class => "about-icon") %></div>
				</div>
				<div class="about_title"> Kenetic </div>
				<div class="about_text"> Lively, not static, webpages that are visually engaging </div>
			</div>
		</div>
	</div>



	<div id="a2">
		<div class="section_title"> SKILLS </div>
		<div class="underline"></div>
		<div class="a1content col-sm-9 flex"> 
			<div class="row">
				<div class="col-sm-4 flex">
					<div class="c1 circle shapeborder">
						<div class="c2 circle">
							<div class="c3 circle">	
								<%= image_tag("kerron.jpg", :class => "kerron_circle") %>
							</div>
						</div>
					</div>
					<div class="man_myth">A Man? A Myth? A Legend?</div>
					<div class="myth_text">An eternal creative optimist, focused on finding the best solutions to life's problems.</div> 
				</div>
				<div class="col-sm-6 skill flex">
					<% @skills.each do |skill| %>
						<div class="row skill">
							<div class="full-skill-bar"> 
								<span class="skill-level slide-bar" style="min-width: calc(<%= skill.proficientcy %>px * 3 + 150px);"></span>
								<span class="skill-name">
									<%= skill.name %>
								</span>
	<!--							<span class="skill-percent"> -->
									<%= skill.proficientcy %>% 
	<!--							</span>  -->
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
		
	</div>

	<div id="a3" class="container-flex">

		<div class="section_title"> PROJECTS </div>
		<div class="underline"></div>
		<div class="a3content col-sm-12">

			<div class="pj_bar_div">
				<div class="pj_center">
					<div class="all button active pj_bar pj1" data-filter="all"><div class="pj_title">All</div></div><!-- this is added to remove the space between in-line elements
					--><div class="ruby_button pj_bar pj2" data-filter=".ruby_on_rails"><div class="pj_title">Ruby On Rails</div></div><!--  this is added to remove the space between in-line elements
					--><div class="react_button pj_bar pj3" data-filter=".reactjs"><div class="pj_title">ReactJS</div></div><!-- this is added to remove the space between in-line elements
					--><div class="javascript_button pj_bar pj4" data-filter=".javascript"><div class="pj_title">JavaScript</div></div><!-- this is added to remove the space between in-line elements
 					--><div class="pj_bar_slider pj5"></div>			
				</div>
			</div>

			<div class="container">
				<div class="row justify-content-center">
					<% @projects.each do |project| %>
						<div class="col-md-3 gitbox5 mix <%= project.language %>">
							<div class="overlay">
								<div class="top_overlay">
								    <div class="text">
								    	<h2><%= project.name %></h2>
								    	<h3><%= project.language %></h3>	
								    	</div>
							  	</div>
							    <div id="<%= project.id %>" class="btm_overlay">
								    <div class="text_btm">Learn More</div>
								</div>
							</div>
						</div>
					<% end %>
					
	<!--  ------------------ Modal Content -----------------------  -->
					<% @projects.each do |project| %>
					
						<div id="modal<%= project.id %>" class="outer-outer">
							<div class="outer"></div>
							 <div class="inner-content">
								<!-- <%= project.id %> -->
								<div>
									<div id="picture_carousel" class="carousel" data-ride="carousel">

												  
										<!-- The slideshow -->
										<div class="born">
											<!-- Indicators -->
											<ul class="carousel-indicators">
											    <li data-target="#picture_carousel" data-slide-to="0" class="active"></li>
											    <li data-target="#picture_carousel" data-slide-to="1"></li>
											    <li data-target="#picture_carousel" data-slide-to="2"></li>
											</ul>
													
											<div class="carousel-inner">
											    <div class="carousel-item active">
											    	<%= image_tag @project.pic1.url, style: 'height: auto; width: 100%;', :class => "pic1" %>
											    </div>
											    <div class="carousel-item">
											    	<%= image_tag @project.pic2.url, style: 'height: auto; width: 100%;', :class => "pic2" %>
											    </div>
											    <div class="carousel-item">
											    	<%= image_tag @project.pic3.url, style: 'height: auto; width: 100%;', :class => "pic3" %>
											    </div>
											    
											    <!-- Left and right controls -->
												<a class="carousel-control-prev" href="#picture_carousel" data-slide="prev">
												    <span class="carousel-control-prev-icon"></span>
												</a>
												<a class="carousel-control-next" href="#picture_carousel" data-slide="next">
												    <span class="carousel-control-next-icon"></span>
												</a>

											</div>
										
															  
											

										</div>
									</div>
								</div>
							
								<h1><%= project.name %></h1>
								<h3><%= project.description %></h3>
								<a href="<%= project.link %>">View Code</a>
							</div>


						</div>
					<% end %>

	<!--  ------------------ End of Modal Content -----------------------  -->				
				</div>
			</div>
		</div>		

	</div>
	<div id="a4">
		<div class="arrowdown"></div>
		
		<div class="meetme col-sm-5">
			<h1 class="section_title">Contact</h1>
			<div class="underline"></div>
			<h3>Let's connect and make something awesome together</h3>
		</div>

		<div class="myform col-sm-5">
			<%= form_for @contact do |f| %>
				<div><%= f.text_field :f_name, class: 'myform-info', placeholder: "Your Name" %></div>
				<div><%= f.text_field :company, class: 'myform-info', placeholder: "Company (Not required)" %></div>
				<div><%= f.select(:reason, options_for_select([['Random Bypasser', 'Random'], ['Job Recruiter','Recruiting'], ['Employer Checking You Out', 'Employer']]), {:prompt => 'What Brings You Here?'}, {:class => 'myform-why'}) %></div>
				<div><%= f.text_area :l_name, class: 'myform-text', placeholder: 'Want to tell me something?' %></div>
				<div><%= f.text_field :email, class: 'myform-mail', placeholder: "Email" %></div>
				  
				<%= f.submit 'Submit', class: 'myform-button' %>
			<% end %>
		</div>


	</div>