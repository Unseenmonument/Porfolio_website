<h1>Projects#edit</h1>
<%= form_for(@project, multipart: true) do |f| %>
	<div><%= f.text_field :name, placeholder: "Project Name" %></div>
	<div><%= f.text_field :language, placeholder: "language" %></div>
	<div><%= f.text_area :description, placeholder: "What's this thing about?" %></div>
	<div><%= f.text_field :blurb, placeholder: "blurb" %></div>
	<div><%= f.text_field :git_link, placeholder: "GitHub link" %></div>
	<div><%= f.text_field :link, placeholder: "link" %></div>

	<br>
	<%= f.file_field :main_pic %>
	<p>delete main pic:   <%= f.check_box(:delete_main_pic) %> </p>
	<br>
	<br>
	<%= f.file_field :pic1 %>
	<p>delete pic1?:   <%= f.check_box(:delete_pic1) %> </p>
	<br>
	<%= f.file_field :pic2 %>
	<p>delete pic2?:   <%= f.check_box(:delete_pic2) %> </p>
	<br>
	<%= f.file_field :pic3 %>
	<p>delete pic3?:   <%= f.check_box(:delete_pic3) %> </p>
	<br>
	<%= f.submit 'Submit' %>
<% end %>


<div><%= @project.name %></div>
<div><%= @project.language %></div>
<div><%= @project.description %></div>
<div><%= @project.blurb %></div>
<div><%= @project.link %></div>

<div><%= image_tag @project.main_pic.url, style: 'height: auto; width: 100%;' %></div>
	
<div><%= image_tag @project.pic1.url, style: 'height: auto; width: 100%;' %></div>
<div><%= image_tag @project.pic2.url, style: 'height: auto; width: 100%;' %></div>
<div><%= image_tag @project.pic3.url, style: 'height: auto; width: 100%;' %></div>